<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Text_400">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_400</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Text_500">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_500</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Text_600">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_600</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Text_700">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_700</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="AdFullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BaseBottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="BaseBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_hideable">true</item>
    </style>
    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="Theme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
    <style name="AppTheme.DialogFragmentFullScreen" parent="Theme.Dialog">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="CustomTabText">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_500</item>
    </style>
</resources>
